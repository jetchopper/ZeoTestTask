<UserControl
    x:Class="MatrixTestTask.Views.CellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utils="using:MatrixTestTask.Utils"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Width="{x:Bind utils:Settings.ViewSize}" Height="{x:Bind utils:Settings.ViewSize}">
        <Rectangle Margin="4" Stroke="Gray"/>
        
        <TextBlock Text="{Binding Number}" FontSize="28" FontWeight="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
